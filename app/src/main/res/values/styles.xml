<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:textColorSecondary">#000</item>

        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolBar" parent="ThemeOverlay.AppCompat.Light">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fab">
        <item name="fab_colorNormal">#EE4E4E</item>
        <item name="fab_colorPressed">#EE4E4E</item>
        <item name="fab_colorRipple">#C03D3D</item>
    </style>


</resources>
