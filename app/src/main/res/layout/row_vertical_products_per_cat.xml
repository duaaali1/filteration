<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:innerRadius="25dp"
    android:padding="4dp"
    android:shape="ring"
    android:layout_margin="4dp"
    android:thicknessRatio="1.9"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/view5"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCatProduct"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="120dp"
            android:background="@drawable/s"
            android:padding="10dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="الصنف: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvitem"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="قشارة بطاطا"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="رقم الصنف: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvitemNo"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="17"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="المبنى: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvbuilding"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical|end"

                    android:text="A"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="الطابق: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvfloor"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="الشارع: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvstreet"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical|end"
                    android:text="A"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="رقم المحل: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvstoreNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="13"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="السعر: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvjordanianPrce"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="12 JD"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="-"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvchinaPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="13 CNY"
                    android:textColor="#333333"
                    android:textSize="12sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="التعبئة: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvpacking"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="15"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="عدد الكراتين: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvcartonsNo"
                    android:layout_width="0dp"
                    android:layout_weight="1"                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="15"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="الاجمالي: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvtotal"
                    android:layout_width="0dp"
                    android:layout_weight="1"                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="152 JD"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="ملاحظات: "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="نفذت الكمية"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>