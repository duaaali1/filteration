<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="?attr/colorPrimary"
            android:orientation="vertical">


            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"

                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/backLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/colorPrimary"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="الصنف"
                                android:textColor="#FFF"
                                android:textSize="18sp" />

                            <EditText
                                android:layout_width="0dp"
android:id="@+id/item"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"

                                android:popupBackground="#FF585858"

                                android:singleLine="true"
                                android:textColor="#FFF"
                                android:textColorHint="#FFF"
                                app:backgroundTint="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="التعبئة"
                                android:textColor="#FFF"
                                android:textSize="18sp" />

                            <EditText
                                android:layout_width="0dp"
android:id="@+id/packing"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:inputType="number"
                                android:popupBackground="#FF585858"

                                android:singleLine="true"
                                android:textColor="#FFF"
                                android:textColorHint="#FFF"
                                app:backgroundTint="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="عدد الكراتين"
                                android:textColor="#FFF"
                                android:textSize="18sp" />

                            <EditText
                                android:layout_width="0dp"
android:id="@+id/cartonsNo"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:layout_weight="1"

                                android:popupBackground="#FF585858"

                                android:singleLine="true"
                                android:textColor="#FFF"
                                android:textColorHint="#FFF"
                                app:backgroundTint="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="السعر (CNY)"
                                android:textColor="#FFF"
                                android:textSize="18sp" />

                            <EditText
                                android:layout_width="0dp"
android:id="@+id/chinaPrice"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:inputType="number"
                                android:popupBackground="#FF585858"

                                android:singleLine="true"
                                android:textColor="#FFF"
                                android:textColorHint="#FFF"
                                app:backgroundTint="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="رقم المحل"
                                android:textColor="#FFF"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/storeNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"


                                android:layout_weight="1"

                                android:popupBackground="#FF585858"

                                android:singleLine="true"
                                android:textColor="#FFF"
                                android:textColorHint="#FFF"
                                app:backgroundTint="#FFF" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="المبنى"
                                android:textColor="#FFF"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/building"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"


                                android:layout_weight="1"

                                android:popupBackground="#FF585858"

                                android:singleLine="true"
                                android:textColor="#FFF"
                                android:textColorHint="#FFF"
                                app:backgroundTint="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="الطابق"
                                android:textColor="#FFF"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/floor"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"

                                android:popupBackground="#FF585858"

                                android:singleLine="true"
                                android:textColor="#FFF"
                                android:textColorHint="#FFF"
                                app:backgroundTint="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="الشارع"
                                android:textColor="#FFF"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/street"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"


                                android:layout_weight="1"

                                android:popupBackground="#FF585858"

                                android:singleLine="true"
                                android:textColor="#FFF"
                                android:textColorHint="#FFF"
                                app:backgroundTint="#FFF" />

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="رقم الصنف"

                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/itemNo"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:popupBackground="#FF585858"

                    android:singleLine="true"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    app:backgroundTint="#FFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/save"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="حفظ"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/ivCancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="اغلاق"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</ScrollView>

